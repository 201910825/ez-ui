{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "components/**/*", // 모든 컴포넌트 파일 포함
    "src/**/*" // 모든 컴포넌트를 내보내는 파일 포함
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
